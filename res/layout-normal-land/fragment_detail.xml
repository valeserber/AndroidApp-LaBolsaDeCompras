<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.labolsadecompras.DetailActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/prod_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="@string/hint_prod_name"
        android:includeFontPadding="true"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prod_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prod_name"
        android:hint="@string/hint_prod_brand"
        android:includeFontPadding="true"
        android:paddingLeft="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/prod_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prod_brand"
        android:hint="@string/hint_prod_price"
        android:includeFontPadding="true"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/prod_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/prod_name"
        android:baselineAligned="false" >
		
		<GridView 
	    android:id="@+id/product_photos" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:layout_margin="5dp" 
	    android:columnWidth="350dp" 
	    android:gravity="center" 
	    android:numColumns="auto_fit" 
	    android:stretchMode="columnWidth"
	    android:layout_marginLeft="5dip"
	    android:paddingLeft="10dp" >
		</GridView>
       <!--  <ListView
            android:id="@+id/product_photos"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_marginLeft="5dip"
            android:paddingLeft="10dp" />-->
    </LinearLayout>

</RelativeLayout>
