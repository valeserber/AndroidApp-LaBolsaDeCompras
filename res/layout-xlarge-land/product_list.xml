<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">
 
        <ImageView
            android:id="@+id/prod_img"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:paddingBottom="2dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"/>
 
    </LinearLayout>
        
        <TextView
            android:id="@+id/prod_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hint_prod_name"
            android:textStyle="bold"
            android:includeFontPadding="true"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:ellipsize="end"
            android:textSize="18sp"
            android:layout_below="@id/thumbnail"
        	 />
        <TextView
            android:id="@+id/prod_brand"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:hint="@string/hint_prod_brand"
            android:includeFontPadding="true"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:layout_below="@id/prod_txt"
             />
        <TextView
            android:id="@+id/prod_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hint_prod_price"
            android:textStyle="bold"
            android:includeFontPadding="true"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_below="@id/prod_brand"
             />
</RelativeLayout>