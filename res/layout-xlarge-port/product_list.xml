<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">
 
        <ImageView
            android:id="@+id/prod_img"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>
 
    </LinearLayout>
        
        <TextView
            android:id="@+id/prod_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hint_prod_name"
            android:textStyle="bold"
            android:includeFontPadding="true"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:ellipsize="end"
            android:textSize="23sp"
            android:layout_alignTop="@+id/thumbnail"
        	android:layout_toRightOf="@+id/thumbnail"
        	 />
        <TextView
            android:id="@+id/prod_brand"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:hint="@string/hint_prod_brand"
            android:includeFontPadding="true"
            android:paddingLeft="10dp"
            android:textSize="17sp"
            android:layout_below="@id/prod_txt"
            android:layout_toRightOf="@+id/thumbnail"
             />
        <TextView
            android:id="@+id/prod_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hint_prod_price"
            android:textStyle="bold"
            android:includeFontPadding="true"
            android:paddingLeft="10dp"
            android:textSize="24sp"
            android:layout_below="@id/prod_brand"
            android:layout_toRightOf="@+id/thumbnail"
             />
</RelativeLayout>